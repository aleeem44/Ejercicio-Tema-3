public class Main {
    public  static void main(String[] args) {
        int numeroIf = 2;

        if (numeroIf > 0){
            System.out.println("El número es positivo");
        } else if (numeroIf < 0) {
            System.out.println("El número es negativo");
        }
        else {
            System.out.println("El numero es igual a 0");
            }
    }
}
